<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        
        xmlns:Views="clr-namespace:Installer.Views"
        
        Title="Windows Hyper Key Remover "
        ResizeMode="CanMinimize"
        Background="{DynamicResource Background}"
        Height="400" Width="600">

    <Grid UseLayoutRounding="True">

        <Views:Intro x:Name="IntroView" Visibility="Visible"/>
        <Views:Select x:Name="SelectView" Visibility="Collapsed"/>
        <Views:Result x:Name="ResultView" Visibility="Collapsed"/>

    </Grid>
</Window>