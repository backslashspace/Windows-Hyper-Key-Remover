<Window x:Class="Installer.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        
        Title="Message title"
        Width="240" Height="186"
        Background="#262626"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="0,0,0,0">

        <TextBlock x:Name="MessageBlock" Style="{StaticResource TextBlock}"
            d:Text="sample Message"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Width="Auto"
            Margin="64,30,30,0"/>

        <Image x:Name="Dialogue_Icon"
            Margin="22,23,0,0"
            Source="\Dialogue\Icons\imageres_106.ico"
            Height="32" Width="32"
            RenderOptions.BitmapScalingMode="HighQuality" 
            VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Grid x:Name="Button_Grid" Height="64" Background="#202020" VerticalAlignment="Bottom"/>

    </Grid>
</Window>